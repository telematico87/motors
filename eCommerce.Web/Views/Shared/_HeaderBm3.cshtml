@using Microsoft.AspNet.Identity

<section id="header" class="header">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <ul class="flat-support">
                        <li>
                            <a href="@Url.CatalogoMoto(0,0)" title="Visite nuestro Catalogo">Catálogo</a>
                        </li>
                        <li>
