@using eCommerce.Entities
@using eCommerce.Shared
@model eCommerce.Web.ViewModels.ProductsViewModel

@if (Model != null && Model.Marcas != null && Model.Marcas.Count > 0)
{
    int categoryId = Convert.ToInt32(Model.CategoryID);
    int marcaId = Convert.ToInt32(Model.MarcaID);
    <div class="widget widget-categories">
        <div class="widget-title">
            <h3>Marcas<span></span></h3>
        </div>
        <ul class="cat-list style1 widget-content">
            <li>
                <label>                    
                    @if (Model.CatalogoID.Equals(eCommerce.Shared.Commons.eCommerceConstants.CATALOGO_MOTO_ID))
                    {
                        <a href="@Url.CatalogoMoto(categoryId: categoryId, marcaId: 0)">
                            <input type="radio" @(marcaId == 0 ? "checked" : string.Empty) name="grupoMarca" value="0" /><span>TODAS LAS MARCAS</span>
                        </a>
                    }

                    @if (Model.CatalogoID.Equals(eCommerce.Shared.Commons.eCommerceConstants.CATALOGO_ACCESORIO_ID))
                    {                        
                        <a href="@Url.CatalogoParts(categoryId: categoryId, marcaId: 0)">
                            <input type="radio" @(marcaId == 0 ? "checked" : string.Empty) name="grupoMarca" value="0" /><span>TODAS LAS MARCAS</span>
                        </a>
                    }
                </label>
            </li>

            @foreach (var marca in Model.Marcas)
            {
                <li>
                    <label>                 
                        @if (Model.CatalogoID.Equals(eCommerce.Shared.Commons.eCommerceConstants.CATALOGO_MOTO_ID))
                        {
                            <a href="@Url.CatalogoMoto(categoryId: categoryId, marcaId: marca.ID)">
                                <input type="radio" @(marca.ID == marcaId ? "checked" : string.Empty) name="grupoMarca" value="@(marca.ID)" /><span>@(marca.Descripcion != null ? marca.Descripcion.ToUpper() : string.Empty)</span>
                            </a>
                        }

                        @if (Model.CatalogoID.Equals(eCommerce.Shared.Commons.eCommerceConstants.CATALOGO_ACCESORIO_ID))
                        {                           
                            <a href="@Url.CatalogoParts(categoryId: categoryId, marcaId: marca.ID)">
                                <input type="radio" @(marca.ID == marcaId ? "checked" : string.Empty) name="grupoMarca" value="@(marca.ID)" /><span>@(marca.Descripcion != null ? marca.Descripcion.ToUpper() : string.Empty)</span>
                            </a>
                        }
                    </label>
                </li>
            }
        </ul>
    </div>
}
