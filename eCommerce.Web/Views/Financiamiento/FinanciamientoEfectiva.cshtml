                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="MontoFinanciar">Ocupación<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="txtOcupacion" name="txtOcupacion" placeholder="Ingrese Ocupación" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Ingrese Ocupación'" maxlength="50">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="TipoFinanciera">Financiera de Preferencia<span class="text-danger">*</span></label>
                                    <select id="cboTipoFinanciera" class="form-control custom-select" name="TipoFinanciera">
                                    </select>
                                </div>
                            </div>
                        </div>
