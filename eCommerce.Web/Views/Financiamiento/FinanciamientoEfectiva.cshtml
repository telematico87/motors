                                        <div class="input-group-prepend">
                                            <span class="input-group-text">S/</span>
                                        </div>
                                        <input type="number" disabled required id="txtMontoFinanciar" name="txtMontoFinanciar" value="0" class="form-control" aria-label="Monto a Financiar">
