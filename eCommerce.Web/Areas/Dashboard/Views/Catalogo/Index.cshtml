@model eCommerce.Web.Areas.Dashboard.ViewModels.CatalogosListingViewModels

@{
    if (Model != null)
    {
        Model.PageTitle = "Catálogo";
        Model.PageDescription = "Lista de Catálogo";
        Model.PageURL = Url.ListAction("Catalogo");
        Model.PageImageURL = PictureHelper.PageImageURL("catalogo.jpg");
    }
}


<div class="page-info-container">
    <h3 class="h3 mb-2 text-gray-800">
        @Model.PageTitle
    </h3>
    <p>
        @Model.PageDescription
    </p>
    <hr />
</div>

<div class="page-data-holder card shadow mb-4">
    <div class="card-header">
        <form action="@Url.ListAction("Catalogo")">
            <div class="input-group">
                <input name="searchterm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="@("Buscar Catalogo")">
                <button type="submit" class="form-control btn btn-primary"><i class="fas fa-search"></i> @("Buscar Catalogo")</button>
                <a href="@Url.ListAction("Catalogo")" role="button" class="form-control btn btn-primary"><i class="fas fa-redo-alt"></i> @("Dashboard.Color.Reset".Localized())</a>
                <a href="@Url.CreateAction("Catalogo")" role="button" class="form-control btn btn-success"><i class="fas fa-plus"></i> Crear Catálogo</a>
            </div>
        </form>
    </div>
    <div class="card-body p-0" id="list-holder">
        @{Html.RenderPartial("_Listing", Model);}
    </div>
</div>

