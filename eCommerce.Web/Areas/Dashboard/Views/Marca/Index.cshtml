@model eCommerce.Web.Areas.Dashboard.ViewModels.MarcasListingViewModels

@{
    if (Model != null)
    {
        Model.PageTitle = "Marcas";
        Model.PageDescription = "Lista Marcas";
        Model.PageURL = Url.ListAction("Marca");
        Model.PageImageURL = PictureHelper.PageImageURL("marca.jpg");
    }
}


<div class="page-info-container">
    <h3 class="h3 mb-2 text-gray-800">
        @Model.PageTitle
    </h3>
    <p>
        @Model.PageDescription
    </p>
    <hr />
</div>

<div class="page-data-holder card shadow mb-4">
    <div class="card-header">
        <form action="@Url.ListAction("Marca")">
            <div class="input-group">
                <input name="searchterm" type="text" value="@Model.SearchTerm" class="form-control" placeholder="Buscar Marca">
                <button type="submit" class="form-control btn btn-primary"><i class="fas fa-search"></i> Buscar Marca</button>
                <a href="@Url.ListAction("Marca")" role="button" class="form-control btn btn-primary"><i class="fas fa-redo-alt"></i> Refrescar</a>
                <a href="@Url.CreateAction("Marca")" role="button" class="form-control btn btn-success"><i class="fas fa-plus"></i> Crear Marca</a>
            </div>
        </form>
    </div>
    <div class="card-body p-0" id="list-holder">
        @{Html.RenderPartial("_Listing", Model);}
    </div>
</div>

